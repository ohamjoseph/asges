{{ form_start(form) }}
<div class="row">
    {% for child in form %}
        <div class="col-6">

            <div class="mb-3">
                {% if 'token' not in form_label(child) %}
                    {{ form_label(child,null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(child,{
                        'attr': {
                            'class':'form-control'
                        }
                    }) }}
                {%endif%}
            </div>

        </div>


    {% endfor %}
    <div class="mb-3">
        <button class="btn btn-primary d-grid w-20">{{ button_label|default('Enregistrer') }}</button>
    </div>

</div>
{{ form_end(form) }}
