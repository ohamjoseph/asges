{% extends 'theme/base/base_main.html.twig' %}

{% block title %}Demandes de creation d'association{% endblock %}

{% block body %}
<div class="card">
    <div class="table-responsive text-nowrap">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Objectif</th>
                <th>N. Recipices</th>
                <th>Cr√©er le</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody class="table-border-bottom-0">
            {% for association in associations %}
                {%include 'theme/include/association_ligne_admin.html.twig' with {'association':association}%}
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<div class="row">
    {% if isPaginated is defined and isPaginated %}
    <div class="demo-inline-spacing">

        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                {% if page>1 %}
                    <li class="page-item prev">
                        <a class="page-link" href="{{path('app_admin',{page:1})}}"><i
                                class="tf-icon bx bx-chevrons-left"></i></a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="{{path('app_admin',{page:page-1})}}">{{page-1}}</a>
                    </li>
                {% endif %}

                <li class="page-item  active">
                    <a class="page-link" href="{{path('app_admin',{page:page})}}">{{page}}</a>
                </li>


                <!-- {% for i in range(1, nbPage) %}
                <li class="page-item {%if page==i %} active {% endif %}">
                    <a class="page-link" href="{{path('app_admin',{page:i})}}">{{i}}</a>
                </li>
                {% endfor %}
                 -->
                {% if page < nbPage %}
                    <li class="page-item">
                        <a class="page-link" href="{{path('app_admin',{page:page+1})}}">{{page+1}}</a>
                    </li>
                    <li class="page-item next">
                        <a class="page-link" href="{{path('app_admin',{page:nbPage})}}"><i
                                class="tf-icon bx bx-chevrons-right"></i></a>
                    </li>
                {% endif %}
            </ul>
        </nav>
    </div>

    {% endif %}
</div>
{% endblock %}