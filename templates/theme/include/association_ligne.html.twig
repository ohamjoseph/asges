<tr>
    <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>{{adhesion.getUser}}</strong></td>
    <td>{{adhesion.getUser.email}}</td>
    <td>{{adhesion.getUser.adresse}}</td>

    <td>
        <span class="badge bg-label-{% if adhesion.status == 'CREER'%}primary{%elseif adhesion.status == 'ACTIVE'%}success{%elseif adhesion.status == 'SUSPENDUS'%}warning{%elseif adhesion.status == 'BANNIS'%}danger{%endif%} me-1">
            {{ adhesion.status }}
        </span>
    </td>
    <td>
        <div class="dropdown">
            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                <i class="bx bx-dots-vertical-rounded"></i>
            </button>
            <div class="dropdown-menu">
                <a class="dropdown-item" href="{{path('app_adhesion.detail',{'id':adhesion.id})}}"
                ><i class="bx bx-edit-alt me-1"></i>Edit</a
                >
                <a class="dropdown-item" href="{{path('app_adhesion.mail',{'as':adhesion.association.id,'ad':adhesion.user.id})}}"
                ><i class='bx bx-mail-send me-1'></i>Envoyer un mail</a
                >
            </div>
        </div>
    </td>
</tr>