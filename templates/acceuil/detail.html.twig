                        <div class="mb-3">
                            <label class="form-label" for="basic-icon-default-fullname">Objectif</label>
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-fullname2" class="input-group-text"><i class="bx bx-user"></i></span>
                                <input type="text" class="form-control" id="basic-icon-default-fullname" placeholder="John Doe"
                                    aria-label="John Doe" value="{{association.objectif}}" aria-describedby="basic-icon-default-fullname2"
                                    disabled />
                            </div>
                        </div>
                    </div>
                
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label" for="basic-icon-default-fullname">Adresse</label>
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-fullname2" class="input-group-text"><i class="bx bx-user"></i></span>
                                <input type="text" class="form-control" id="basic-icon-default-fullname" placeholder="John Doe"
                                    aria-label="John Doe" value="{{association.adresse}}"
                                    aria-describedby="basic-icon-default-fullname2" disabled />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label" for="basic-icon-default-fullname">Téléphone</label>
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-fullname2" class="input-group-text"><i class="bx bx-user"></i></span>
                                <input type="text" class="form-control" id="basic-icon-default-fullname" placeholder="John Doe"
                                    aria-label="John Doe" value="{{association.tel}}"
                                    aria-describedby="basic-icon-default-fullname2" disabled />
                            </div>
                        </div>
                    </div>
                
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label" for="basic-icon-default-fullname">E-Mail</label>
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-fullname2" class="input-group-text"><i class="bx bx-user"></i></span>
                                <input type="text" class="form-control" id="basic-icon-default-fullname" placeholder="John Doe"
                                    aria-label="John Doe" value="{{association.mail}}"
                                    aria-describedby="basic-icon-default-fullname2" disabled />
                            </div>
                        </div>
                    </div>
                </div>
                
