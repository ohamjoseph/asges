{% extends 'theme/base/base_main.html.twig' %}

{% block title %}Les associations{% endblock %}

{% block body %}
<div class="row">
    <div class=" mb-3 d-flex justify-content-end">
        <a href="{{path('app_association.add')}}" class="btn btn-primary m-0">
            <span class='bx bxs-group'></span>&nbsp; Créer une association
        </a>
    </div>
</div>

<div class="row">

{% for association in associations %}

    <div class="col-6">
        <div class="card mb-3">
            <div class="row g-0">
                <div class="col-md-3 p-1">
                    <img class="img-fluid rounded-circle" src="{{asset('/uploads/logo/')}}{%if association.logo %}{{association.logo}}{%else%}img.png{%endif%}"
                        alt="Card image" />
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">{{association.nom}}</h5>
                        <p class="card-text">
                            {{association.objectif}}
                        </p>
                        <p class="card-text"><small class="text-muted">Créer le {{association.createAt|date("d/m/Y") }}</small></p>
                    </div>
                </div>
            </div>
            <hr>
            <div class="row mb-2 mx-2 g-0">
                <div class="d-flex justify-content-end" >
                    <a href="{{path('acceuil.ass.detail', {'id':association.id})}}" class="btn btn-primary mx-2">
                        <span class='bx bxs-info-circle'></span>
                        <span class="d-none d-md-inline">Consulter</span>
                    </a>
                    <button
                            type="button"
                            class="btn tt btn-primary"
                            data-bs-toggle="modal"
                            data-bs-target="#modalCenter"
                            id = '{{association}}'
                            data-entry = '{{association.id}}'
                    >
                        <span class='bx bx-user-plus'></span>
                        <span class="d-none d-md-inline">Adherer</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
{% endfor %}
</div>


    <div class="row">
        {% if isPaginated is defined and isPaginated %}
            <div class="demo-inline-spacing">

                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        {% if page>1 %}
                            <li class="page-item prev">
                                <a class="page-link" href="{{path('app_acceuil',{page:1})}}"><i
                                            class="tf-icon bx bx-chevrons-left"></i></a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="{{path('app_acceuil',{page:page-1})}}">{{page-1}}</a>
                            </li>
                        {% endif %}

                        <li class="page-item  active">
                            <a class="page-link" href="{{path('app_acceuil',{page:page})}}">{{page}}</a>
                        </li>


                        <!-- {% for i in range(1, nbPage) %}
                <li class="page-item {%if page==i %} active {% endif %}">
                    <a class="page-link" href="{{path('app_acceuil',{page:i})}}">{{i}}</a>
                </li>
                {% endfor %}
                 -->
                        {% if page < nbPage %}
                            <li class="page-item">
                                <a class="page-link" href="{{path('app_acceuil',{page:page+1})}}">{{page+1}}</a>
                            </li>
                            <li class="page-item next">
                                <a class="page-link" href="{{path('app_acceuil',{page:nbPage})}}"><i
                                            class="tf-icon bx bx-chevrons-right"></i></a>
                            </li>
                        {% endif %}
                    </ul>
                </nav>
            </div>

        {% endif %}
    </div>


    <!-- Vertically Centered Modal -->
    <div class="col-lg-4 col-md-6">

        <div class="mt-3">
            <!-- Modal -->
            <div class="modal fade" id="modalCenter" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="modalCenterTitle">Adhésion</h5>
                            <button
                                    type="button"
                                    class="btn-close"
                                    data-bs-dismiss="modal"
                                    aria-label="Close"
                                    id =
                            ></button>
                        </div>
                        <div class="modal-body">
                            <div class="col">
                                Voulez vous adhérer à l'association <strong id="ass"></strong> ?
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                                Annuler
                            </button>
                            <a id = 'btn_ad' href="" class="btn btn-outline-primary">
                                &nbsp;Adhérer
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.0.js"></script>
    <script>
        $(".tt").click(function(event) {
            var ass = (event.target.getAttribute('id'));
            $( "#ass" ).html(ass);

            var valeur = (event.target.getAttribute('data-entry'));
            valeur =  parseInt(valeur)
            url = '{{ path("app_adhesion.add", {'id': 'ass.id'}) }}';

            url = url.replace("ass.id", valeur);
            $( "#btn_ad" ).attr("href",url);

        });
    </script>
{% endblock %}
